<div class="container">
    <div class="row calendar-menu">
        <div class="col-md-6"><h1>Calendar</h1></div>
        <div class="col-md-2"><button class="calendar-button" {{action "show" "week"}}>Week</button></div>
        <div class="col-md-2"><button class="calendar-button" {{action "show" "month"}}>Month</button></div>
        <div class="col-md-2"><button class="calendar-button" {{action "show" "year"}}>Year</button></div>
    </div>
</div>
<div class="left cal-proj-container">
{{#each model as |project|}}
    <div class="checkbox"><label><input type="checkbox" name={{project.name}} {{action "checked" project.name}} >{{project.name}}</label></div>
{{/each}}
</div>

<div class="left cal-week-container">
{{#each model as |project|}}
    <div class="due-date">{{project.dueDate}}</div>
{{/each}}
</div>
<button {{action "showfiltered"}}>show filtered</button>

{{calendar-projects projects=projects}}

{{outlet}}
